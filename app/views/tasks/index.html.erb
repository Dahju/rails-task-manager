<br>
  <p><%= link_to "Create a new task", new_task_path %></p>
<br>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <p><%= link_to task.name, task_path(task) %></p>
  <p><%= link_to "Edit", edit_task_path(task) %></p>
  <p><%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</p>
  <br>
  <p><%= link_to "Create a new task", new_task_path %></p>
<% end %>
